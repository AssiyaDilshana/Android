<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Input Field -->
    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Enter Here"
        android:focusable="false"
        android:inputType="none"
        android:background="@android:color/darker_gray"
        android:gravity="end"/>

    <!-- Number Buttons -->
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt1"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:text="1" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignTop="@id/button1" android:layout_toEndOf="@id/button1"
        android:layout_marginStart="16dp" android:text="2" />
    <Button android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignTop="@id/button1" android:layout_toEndOf="@id/button2"
        android:layout_marginStart="16dp" android:text="3" />

    <Button android:id="@+id/button4" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button1" android:layout_alignStart="@id/button1"
        android:layout_marginTop="16dp" android:text="4" />
    <Button android:id="@+id/button5" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button2" android:layout_alignStart="@id/button2"
        android:layout_marginTop="16dp" android:text="5" />
    <Button android:id="@+id/button6" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button3" android:layout_alignStart="@id/button3"
        android:layout_marginTop="16dp" android:text="6" />

    <Button android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_alignStart="@id/button4"
        android:layout_marginTop="16dp"
        android:text="7" />
    <Button android:id="@+id/button8" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button5" android:layout_alignStart="@id/button5"
        android:layout_marginTop="16dp" android:text="8" />
    <Button android:id="@+id/button9" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button6" android:layout_alignStart="@id/button6"
        android:layout_marginTop="16dp" android:text="9" />

    <Button android:id="@+id/button0" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button8" android:layout_alignStart="@id/button8"
        android:layout_marginTop="16dp" android:text="0" />
    <Button android:id="@+id/buttonDot" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button7" android:layout_alignStart="@id/button7"
        android:layout_marginTop="16dp" android:text="." />
    <Button android:id="@+id/buttonC" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/button9" android:layout_alignStart="@id/button9"
        android:layout_marginTop="16dp" android:text="C" />

    <!-- Operation Buttons -->
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignTop="@id/button1"
        android:layout_alignParentEnd="true" />
    <Button android:id="@+id/buttonSub" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="-" android:layout_alignTop="@id/button4"
        android:layout_alignEnd="@id/buttonAdd" />
    <Button android:id="@+id/buttonMul" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="ร" android:layout_alignTop="@id/button7"
        android:layout_alignEnd="@id/buttonAdd" />
    <Button android:id="@+id/buttonDiv" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="รท" android:layout_alignTop="@id/buttonDot"
        android:layout_alignEnd="@id/buttonAdd" />

    <!-- Equals Button -->
    <Button android:id="@+id/buttonEql" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_below="@id/button0" android:layout_marginTop="24dp"
        android:layout_alignStart="@id/buttonDot" android:text="=" />

</RelativeLayout>
